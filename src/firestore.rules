rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // PERMITIR LECTURA PÃšBLICA DE SUCURSALES
    // Esto es necesario para que la app cargue el branding antes del login
    match /branches/{branchId} {
      allow read: if true;
      allow write: if request.auth != null; // Solo personal logueado edita
    }

    // EL RESTO DE LAS COLECCIONES (Privadas)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}